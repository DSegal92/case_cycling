		<div class="row-fluid">
			<div class="container">
				<div id="banner">
					<ul class="bjqs">
						<% @carousel.each do |image| %>
						<li><img src= <%=image.url%> ></li>
						<% end %>
					</ul>
				</div> 
			</div>
		</div>	

		<hr class="soften">
		<div class="row-fluid">
			<div class="span8">
				<% @posts.each do |post| %>
					<table>
						<tbody>
							<tr>
								<td id="postTitle" colspan='2'> <%= post.title %></td>
								<td id="postDate"> <%= post.date %></td>
							<tr>
								<td id="contentText" colspan='3'><%= simple_format(post.contents) %></td>
							</tr>
							
						</tbody>
					</table>
				<% end %>		
			</div>
			<div class="span4">
				<table id="contentText">
						<h4 id="upcoming"> upcoming events</h4>
						<tbody>        
							<% @events.each do |event| %>
								<% if event.date > Time.now() %>
								<tr>					
									<td colspan='2'><%= event.name %> (<%= event.discipline %>)</td>
								</tr>
								<tr>
									<td>
										<span id="navFront">
											<ul> 
												<li><%= event.location %></li>
												<li><%= event.date.strftime('%A %D') %> at <%= event.date.strftime("at %I:%M%p") %></li>
												<li><%= link_to event.website, event.website %></li>
											</ul>
										</span>
									</td>								               
								</tr>
								<% end %>
							<% end %>
						</tbody>
					</table>
					<table>
						<h4 id="upcoming"> upcoming rides </h4>
						<tbody>        
							<% @rides.each do |ride| %>
								<% if ride.time > Time.now() || ride.recurring %>
								<tr>
									<td colspan='2'><%= ride.discipline %> Ride / <%= ride.distance %> miles / <%= ride.pace %></td>                
								</tr>
								<tr>
									<td>
										<span id="navFront">
											<ul id="contentText">
												<li>Starting From: <%= ride.location %></li>
												<% if ride.recurring %>
												<li><%= ride.time.strftime("%A (%I:%M%p)") %>
												<% else %>
												<li><%= ride.time.strftime("%A %D (%I:%M%p)") %></li>
												<% end %>
											</ul>
										</span>
									</td>               
								</tr>
								<% end %>
							<% end %>
						</tbody>
					</table>
			</div>
		</div>
