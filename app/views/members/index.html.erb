<div class="row-fluid">
            <div class="span12">
    <table>
    <tbody>
        <tr>
            <% @racers.each_with_index do |racer, index| %>
                <% if index % 2 == 0 %>
                    </tr><tr>
                <% end %>    

            <td>
                <span class="page-header" id="nav1">
                    <h3 id="nameBig"> <%= racer.name %></h3>
                </span>
                <table id="bioText">
                    <tbody>   
                        <tr>
                            <td rowspan = "5" width= "200">
                                <% if racer.picture == "default" %>
                                <img src= "/assets/default.jpg" %>
                                <% else %>
                                <img src= "<%= racer.picture %>">
                                <% end %>
                            </td>
                            <td>
                                <ul>                        
                                    <% unless racer.standing.empty? %>
                                    <li><b>Standing:</b> <%= racer.standing %></li>
                                    <% end %>
                
                                    <% unless racer.majors.empty? %>
                                    <li><b>Major(s):</b> <%= racer.majors %></li>
                                    <% end %>
                
                                    <% unless racer.minors.empty? %>
                                    <li><b>Minor(s):</b> <%= racer.minors %></li>
                                    <% end %>
                                    <% unless racer.disciplines.empty? %>
                                    <li><b>Disciplines: </b>
                                        <% racer.disciplines.each_with_index do |dis, index| %>
                                        <% if index == 0 %>
                                        <%= dis.name %>   
                                        <% else %>
                                        / <%= dis.name %>
                                        <% end %>                       
                                        <% end %>
                                    </li>
                                    <% end %>
                                </ul>
                            </td>                
                        </tr>
                    </tbody>
                </table> 
            </td>
        <% end %>
    </tbody>
</table>
</div>
</div>


